<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="0dp">

        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_book"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:paddingRight="5dp"
                android:src="@drawable/mate2"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/class_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_book"
                android:text="Clase: "
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/class_text"
                android:text="Test"
                android:textSize="15sp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_book"
                android:layout_below="@+id/name"
                android:drawableLeft="@drawable/ic_date_range_black_24dp"
                android:text="Test"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/date"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/ic_access_time_black_24dp"
                android:layout_below="@+id/name"
                android:text="Test"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_book"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:layout_below="@+id/time"
                android:text="Test"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_book"
                android:drawableLeft="@drawable/ic_place_black_24dp"
                android:layout_below="@+id/teacher"
                android:text="Test"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_book"
                android:layout_below="@+id/site"
                android:drawableLeft="@drawable/ic_timer_black_24dp"
                android:text="Test"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/duration"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/ic_monetization_on_black_24dp"
                android:layout_below="@+id/site"
                android:text="Test"
                android:textSize="15sp" />

            <!--<TextView-->
                <!--android:id="@+id/last_name"-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="wrap_content"-->

                <!--android:layout_toRightOf="@+id/name"-->
                <!--android:alpha="0.8"-->
                <!--android:paddingBottom="2dp"-->
                <!--android:paddingLeft="@dimen/activity_horizontal_margin"-->
                <!--android:paddingRight="@dimen/activity_horizontal_margin"-->
                <!--android:paddingTop="5dp"-->
                <!--android:textSize="15dp" />-->
        </RelativeLayout>



    </android.support.v7.widget.CardView>
</LinearLayout>
